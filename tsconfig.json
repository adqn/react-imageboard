{
  "extends": "@tsconfig/node16/tsconfig.json",
  "outDir": "dist",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "server.ts",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "client"
  ],
}
